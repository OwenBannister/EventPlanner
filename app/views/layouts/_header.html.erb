
<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="<%= root_path %>" name="top">EventPlanner</a>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="divider-vertical"></li>
          <% if @current_page == :events %>
            <li class="active">
          <% else %>
            <li>
          <% end %>
            <a href="<%= events_path %>">
              <i class="icon-list-alt"></i>
              All Events
            </a>
          </li>
          <li class="divider-vertical"></li>

          <% if @current_page == :users %>
            <li class="active">
          <% else %>
            <li>
          <% end %>
          <a href="<%= users_path %>">
            <i class="icon-list-alt">
            </i> All Users
          </a>
          </li>
          <li class="divider-vertical"></li>
        </ul>
        <% if !signed_in? then %>
          <ul class="nav">
            <li>
              <a href="<%= login_path %>">
                <i class="icon-list-alt"></i>
                Login
              </a>
            </li>
          </ul>

        <%end%>
        <% if signed_in? %>
        <div class="btn-group pull-right">
          <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="icon-user"></i> <%= current_user.name %><span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><a href="<%= user_path(current_user)%>"></i> My Profile</a></li>
            <li><a href="<%= edit_user_path(current_user)%>"><i class="icon-wrench"></i> Settings</a></li>
            <li class="divider"></li>
            <li>    <%= link_to "Sign out", logout_path, method: "delete" %></li>
          </ul>
        </div>
          <% end %>
      </div>
    </div>
  </div>
</div>